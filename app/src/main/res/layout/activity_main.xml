<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageView
        android:layout_width="600dp"
        android:layout_height="45dp"
        android:src="@drawable/mbuh"
       android:layout_gravity="fill"/>

</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/akun"
        android:layout_marginRight="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HI Jidan ,Welcome Back!"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
          />



    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
     android:layout_marginLeft="20dp"/>





</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_stars_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="1dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="BRONZE"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="21dp"
            android:textColor="#BB9B57"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_krem"
            android:text="POINTS"
            android:textSize="10dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_krem"
            android:text="Voucher Available"
            android:textSize="10dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_krem"
            android:text="My Orders"
            android:textSize="10dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ayam"/>
    </LinearLayout>
<!--Bulat BUlat-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_line"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                 android:src="@drawable/motor"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_line"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:src="@drawable/tas"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_line"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/mobil"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_line"
            android:layout_marginLeft="30dp">


       <ImageView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
         android:src="@drawable/truk"
         android:layout_marginLeft="9dp"/>


        </LinearLayout>
    </LinearLayout>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="20dp">


    <TextView
        android:id="@+id/my_text_view"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="19dp"
        android:text="Delivey"
        android:textSize="13dp"
        android:textStyle="bold"
        android:clickable="true"
       />

    <TextView
        android:id="@+id/my_text_view_2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Take Away"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/my_text_view_3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Drive Thru"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/my_text_view_4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Large Order"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginLeft="5dp"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="185dp"
        android:background="@drawable/rounded_abu"
        android:layout_margin="3dp">


        <ImageView

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/news"

            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"/>



<ImageView


    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/jago"
    android:layout_margin="25dp"
    android:layout_marginRight="0dp"/>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="350dp"
        android:background="@drawable/rounded_ijo"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:menu="@menu/navigation_menu"
        android:layout_margin="10dp"/>



</LinearLayout>




    </ScrollView>